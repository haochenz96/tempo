/*
 * -------------------------------------------------
 * Nextflow config
 * -------------------------------------------------
 * Images for every process
 * "docker://" prefix for singularity obsolete in newer NF versions
 * -------------------------------------------------
 */

 process {
  withName:FastP {
    cpus = { 2 }
    memory = { 1.MB }
  }
  withName:AlignReads {
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:SortBAM {
    cpus = { 8 }
    memory = { 8.MB }
  }
  withName:MergeBams {
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:MarkDuplicates {
    // Actually the -Xmx value should be kept lower,
    // and is set through the markdup_java_options; cf https://github.com/SciLifeLab/Sarek/blob/master/conf/resources.config#L31
    cpus = { 8 }
    memory = { 1.MB }
    time = { 6.h * task.attempt }
  }
  withName:CreateRecalibrationTable {
    cpus = { 4 }
    memory = { 4.MB }
    time = { 32.h * task.attempt }
  }
  withName:RecalibrateBam {
    cpus = { 4 }
    memory = { 1.MB }
    time = { 32.h * task.attempt }
  }
  withName:Alfred {
    cpus = { 1 }
    memory = { 2.MB }
    time = { 6.h * task.attempt }
  }
  withName:CreateScatteredIntervals {
    cpus = { 4 }
    memory = { 4.MB }
  }

//------------- Somatic Pipeline

  withName:SomaticDellyCall {
    cpus = { 1 }
    memory = { 4.MB }
  }
  withName:SomaticDellyFilter {
    cpus = { 1 }
    memory = { 4.MB }
  }
  withName:SomaticRunMutect2 {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticRunMutect2Filter {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticCombineMutect2Vcf {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticRunManta {
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:SomaticRunStrelka2{
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:SomaticMergeStrelka2Vcfs {
    cpus = { 1 }
    memory = { 1.MB }
  }
  withName:SomaticCombineChannel{
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticRunVcf2Maf {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticDoSnpPileup {
    cpus = { 1 }
    memory = { 1.MB }
  }
  withName:SomaticDoFacets {
    cpus = { 8 }
    memory = { 4.MB }
  }
  withName:SomaticRunMsiSensor {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:SomaticRunHlaPolysolver {
    cpus = { 4 }
    memory = { 1.MB }
  }
  withName:SomaticRunConpair {
    cpus = { 4 }
    memory = { 2.MB }
  }

/------------- Germline Pipeline

  withName:GermlineDellyCall {
    cpus = { 1 }
    memory = { 4.MB }
  }
  withName:GermlineDellyFilter {
    cpus = { 1 }
    memory = { 4.MB }
  }
  withName:GermlineRunHaplotypecaller { 
    cpus = { 8 }
    memory = { 4.MB }
  }
  withName:GermlineCombineHaplotypecallerVcf {
    cpus = { 2 }
    memory = { 4.MB }
  }
  withName:GermlineRunManta {
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:GermlineRunStrelka2 {
    cpus = { 8 }
    memory = { 1.MB }
  }
  withName:GermlineCombineChannel {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:GermlineRunVcf2Maf {
    cpus = { 4 }
    memory = { 4.MB }
  }
  withName:GermlineMergeDellyAndManta {
    cpus = { 2 }
    memory = { 4.MB }
  }
  withName:GermlineRunBcfToolsFilterOnDellyManta {
    cpus = { 4 }
    memory = { 4.MB }
  }
}
