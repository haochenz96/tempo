/*
 * -------------------------------------------------
 * Nextflow config
 * -------------------------------------------------
 * Images for every process
 * "docker://" prefix for singularity obsolete in newer NF versions
 * -------------------------------------------------
 */

 process {
  withName:FastP {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:FastQC {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:AlignReads {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:SortBAM {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:MergeBams {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:MarkDuplicates {
    // Actually the -Xmx value should be kept lower,
    // and is set through the markdup_java_options; cf https://github.com/SciLifeLab/Sarek/blob/master/conf/resources.config#L31
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:CreateRecalibrationTable {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RecalibrateBam {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:Alfred {
    cpus = { 1 }
    memory = { 6.GB }
  }
  withName:DoSNPPileup {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:DoFacets {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:DellyCall {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:DellyFilter {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:CreateScatteredIntervals {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunMutect2 {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunMutect2Filter {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:CombineMutect2Vcf {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunManta {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunStrelka2 {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:CombineChannel {
    cpus = { 2 }
    memory = { 2.MB }
  }
  withName:RunBCFToolsFilterNorm {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunBCFToolsMerge {
    cpus = { 2 }
    memory = { 6.GB }
  }
  withName:RunMsiSensor {
    cpus = { 2 }
    memory = { 6.GB }
  }
}

